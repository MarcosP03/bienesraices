extends ../layout/index

block contenido
  div.py-4
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raíces
    h2.text-center.text-2xl.font-extrabold= title

    if errores
      div(class="max-w-md mx-auto py-4 ")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-2(action="/auth/registro" method="POST")
          input(type="hidden" name="_csrf" value=csrfToken)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre", type="text", name="nombre", value=usuario ? usuario.nombre : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo de Registro
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo", type="text", name="email", value=usuario ? usuario.email : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Contraseña", type="password", name="password",)
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Confirmar Contraseña
            input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite Tu Contraseña", type="password", name="repetir_password",)
          
          .flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/olvide-password") Olive Mi Contraseña 

          input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 hover:bg-indigo-700 hover:cursor-pointer text-white font-bold py-3 px-4 rounded")