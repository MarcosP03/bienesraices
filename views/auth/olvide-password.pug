extends ../layout/index

block contenido
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes
      span.font-normal Raíces
    h2.text-center.text-2xl.font-extrabold= title

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow
        form.space-y-2
          div
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo de Recuperación
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Correo", type="text", name="email", required)
          
          .flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes una cuenta? Crea una

          input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700 hover:cursor-pointer text-white font-bold py-3 px-4 rounded")