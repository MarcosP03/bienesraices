extends ../layout/admin

block contenido
  h2(class="text-2xl font-extrabold text-center my-10")= title
  
  a(href="/mis-propiedades" class="rounded py-2 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold px-10 text-center text-white uppercase my-5 inline-block w-full md:w-auto") Volver

  div(class="mx-auto max-w-4xl bg-white shadow")
  
    if mensajes.length
      ul
        each mensaje in mensajes
          li(class="border-gray border-b p-5")
            p(class="font-bold text-gray-600") Nombre: 
              span(class="font-normal")= mensaje.usario.nombre
            
            p(class="font-bold text-gray-600") Correo: 
              span(class="font-normal")= mensaje.usario.email
            
            p(class="font-bold text-gray-600") Mensaje: 
              span(class="font-normal")= mensaje.mensaje

            p(class="font-bold text-gray-600") Enviado: 
              span(class="font-normal")=  formatearFecha(mensaje.createAt)
    else
      p(class="text-center text-gray-500 p-5") No hay mensajes
